<Application x:Class="WpfApplication24.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="button_style" >
        </Style>
        <ControlTemplate x:Key="my_button" TargetType="{x:Type Button}">
            <Button  Width="80"  Height="40"  Name="r"   Click="r_Click_1" Background="Red"  Style="{StaticResource button_style}">Button</Button>
        </ControlTemplate>
        
    </Application.Resources>
</Application>
