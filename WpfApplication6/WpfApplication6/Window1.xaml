<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        Title="Window1" Height="300" Width="400">
    <Window.Resources>
        <sys:String x:Key="strHello">Hello, world</sys:String>
    </Window.Resources>
    <StackPanel Margin="10">
        <TextBlock Text="{StaticResource strHello}" FontSize="56"/>
        <TextBlock>
            <TextBlock.FontSize>20</TextBlock.FontSize>just another "<TextBlock Text="{StaticResource strHello}" ></TextBlock></TextBlock>
    </StackPanel>
</Window>
