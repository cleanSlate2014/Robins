<Window x:Class="CustomControlsLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:libs="clr-namespace:CustomControlsLibrary"
        
        Title="MainWindow" Height="350" Width="525">
    <Grid>
       
      
        <Canvas>

            <Menu Width="525" Canvas.Right="0" Canvas.Left="0" Canvas.Top="0"  VerticalAlignment="Center" VerticalContentAlignment="Center" Background="Black" >


                <MenuItem Header="_EDIT" >
                    <MenuItem Header="_Copy"></MenuItem>
                </MenuItem>
                <MenuItem Header="_VIEW"  />
                <MenuItem Header="_HELP"  />
                <MenuItem Header="_TOOLS" />
                <MenuItem  Header="_FILE" VerticalAlignment="Bottom" VerticalContentAlignment="Center" >
                    <MenuItem  Header="_new"  />
                    <MenuItem Header="_save"/>
                </MenuItem>

            </Menu>
            
        </Canvas>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="10,54,-10,222" >
            <Button   Content="ButtonSuccess" Width="110"  Style="{StaticResource buttonSuccess}"   Margin="0,0,0,10"  />
            <Button   Content="ButtonPrimary" Width="110"  Style="{StaticResource buttonPrimary}" Margin="10,0,0,10"   />
            <Button   Content="ButtonInfo" Width="110"  Style="{StaticResource buttonInfo}" Margin="10,0,0,10"   />
            <Button   Content="ButtonDanger" Width="110"  Style="{StaticResource buttonDanger}" Margin="10,0,0,10"   />
            <Button   Content="ButtonWarning" Width="110"  Style="{StaticResource buttonWarning}" Margin="10,0,0,10"   />
            <Button Content="Button" Width="110" VerticalAlignment="Top"  Margin="0,0,0,10"  />
            
        </StackPanel>
        <RadioButton Margin="52,118,-52,-118" IsChecked="False" />
        <RadioButton Margin="52,118,-52,-118" Style="{StaticResource myRadioButton}"  Background="Red" IsChecked="True" />
        <RadioButton Margin="52,78,-52,-78" Style="{StaticResource myRadioButton}"  Background="#428bca" IsChecked="True" />

        <RadioButton Margin="52,41,-52,-41" Style="{StaticResource myRadioButton}"  Background="#5cb85c" IsChecked="True" />
        <RadioButton Margin="180,41,-180,-41" Style="{StaticResource myRadioButton}"  Background="Black" IsChecked="True" />
        <RadioButton Margin="180,78,-180,-78" Style="{StaticResource myRadioButton}"  Background="#5bc0de" IsChecked="True" />
        <RadioButton Margin="180,118,-180,-118" Style="{StaticResource myRadioButton}"  Background="#f0ad4e" IsChecked="True" />






    </Grid>
</Window>
